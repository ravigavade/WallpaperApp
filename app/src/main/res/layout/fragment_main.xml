<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/colours"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="@color/bg"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/grayScale"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#D3D3D3"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/lilac"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#C8A2C8"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/yellow"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#ffcc33"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/brown"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#663300"
                    app:cardCornerRadius="8dp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/blue"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#0066cc"
                    app:cardCornerRadius="8dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/green"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#336600"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/red"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#cc3333"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/turquoise"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#40E0D0"
                    app:cardCornerRadius="8dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/black"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="8dp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/transparent"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#00000000"
                    app:cardCornerRadius="8dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--        vectprs wallpaper-->
    <LinearLayout
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_height="wrap_content"
            android:text="Illustration"/>
            <ImageView
                android:id="@+id/allIllustration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:padding="6dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/bg"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:fontFamily="@font/poppins"
                    android:id="@+id/IllustrationRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <!--    latest wallpapers-->
    <LinearLayout
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginVertical="@dimen/_10sdp"

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:text="Photos"/>
            <ImageView
                android:id="@+id/allPhotos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:padding="6dp"
                app:tint="@color/white" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_2sdp"

                android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:backgroundTint="@color/bg"
            >
                <androidx.recyclerview.widget.RecyclerView
                    android:fontFamily="@font/poppins"
                    android:id="@+id/LatestWallpaperRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


        </androidx.cardview.widget.CardView>
            </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>